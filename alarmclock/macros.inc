.macro	ZTab
		ldi	zl,low(@0*2)
		ldi	zh,high(@0*2)
		add	zl,@1
		adc	zh,Null		
.endmacro

; -----------------------------------------------------------------------------
.macro	Vector
		ldi	@0l,low(@1)
		ldi	@0h,high(@1)
.endmacro

; -----------------------------------------------------------------------------
.macro	Plus
		add	@0l,@1
		adc	@0h,Null		
.endmacro

